extends layout

block content
    .container
        .row
            .col-md-8
                h1 #{title}
            .col-md-4
                a(class="btn btn-primary create-btn", href="/manage/articles/add") Add Article
        table(class="table table-striped")
            tr 
                th Article Title
                th Date Published
                th Author
                th
            each article, i in articles
                tr
                    td #{article.title}
                    td #{moment(article.created_at).format()}
                    td #{article.author}
                    td  
                        a(class="btn btn-tiny btn-default" href='/manage/articles/edit/'+article._id) Edit    